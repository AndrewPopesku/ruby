<% content_for :title, "Categories" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Categories</h1>
  <%= link_to "New Category", new_category_path, class: "btn btn-primary" %>
</div>

<% if @categories.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Expenses Count</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= category.expenses.count %></td>
            <td>
              <%= link_to "View", category_path(category), class: "btn btn-sm btn-outline-primary" %>
              <%= link_to "Edit", edit_category_path(category), class: "btn btn-sm btn-outline-secondary" %>
              <%= button_to "Delete", category_path(category), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn btn-sm btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-info">
    No categories found. <%= link_to "Create your first category", new_category_path %>.
  </div>
<% end %>
