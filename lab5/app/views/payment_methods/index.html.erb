<% content_for :title, "Payment Methods" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1>Payment Methods</h1>
  <%= link_to "New Payment Method", new_payment_method_path, class: "btn btn-primary" %>
</div>

<% if @payment_methods.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Expenses Count</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @payment_methods.each do |payment_method| %>
          <tr>
            <td><%= payment_method.name %></td>
            <td><%= payment_method.expenses.count %></td>
            <td>
              <%= link_to "View", payment_method_path(payment_method), class: "btn btn-sm btn-outline-primary" %>
              <%= link_to "Edit", edit_payment_method_path(payment_method), class: "btn btn-sm btn-outline-secondary" %>
              <%= button_to "Delete", payment_method_path(payment_method), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn btn-sm btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-info">
    No payment methods found. <%= link_to "Create your first payment method", new_payment_method_path %>.
  </div>
<% end %>
